<Window x:Class="AppHibrida_MGI_SHDB.VentanaPc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppHibrida_MGI_SHDB"
        mc:Ignorable="d"
        Title="VentanaPc" Height="450" Width="800">
    <Grid ShowGridLines="True" HorizontalAlignment="Center"
     VerticalAlignment="Center" Background="AliceBlue"
     Height="450" Width="800">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Name="btnClientes" Height="40" Width="200" FontSize="20" FontWeight="Bold" Click="btnClientes_Click">Clientes</Button>
        <Button Grid.Column="1" Name="btnPedidos" Height="40" Width="200" FontSize="20" FontWeight="Bold" Click="btnPedidos_Click">Pedidos</Button>
    </Grid>
</Window>
